config SMART_CAR_HCSR04_ENABLE
    bool "Enable HC-SR04 Ultrasonic Sensor"
    default y
    depends on SAMPLE_SUPPORT_SMART_CAR
    help
        Enable HC-SR04 ultrasonic sensor for smart car.
